<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.septa.android.app" >

    <!-- needed for the Connect tab to call customer service -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- needed for the Realtime tab tips WebView -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--<uses-permission android:name="android.permission.CAMERA" />-->
    <!--<uses-feature android:name="android.hardware.camera" />-->
    <!--<uses-feature android:name="android.hardware.camera.autofocus" />-->
    <!--<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainTabbarActivity"
                  android:label="SEPTA" >
        </activity>

        <activity
            android:name=".activities.MainNavigationDrawerActivity"
            android:label="@string/app_name" >
        </activity>

        <activity android:name=".activities.PlaceholderActionBarActivity"
            android:parentActivityName=".activities.MainTabbarActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainTabbarActivity"/>
        </activity>

        <activity android:name=".activities.SettingsActionBarActivity"
            android:parentActivityName=".activities.MainTabbarActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainTabbarActivity"/>
        </activity>

        <activity android:name=".activities.TipsActionBarActivity"
            android:parentActivityName=".activities.MainTabbarActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainTabbarActivity"/>
        </activity>

        <activity android:name=".activities.AppFeedbackFormActivity"
                  android:parentActivityName=".activities.MainTabbarActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainTabbarActivity"/>
        </activity>

    </application>

</manifest>
