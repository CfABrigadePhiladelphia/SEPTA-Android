<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white">

    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/nexttoarrive_nexttoarrivetrains_trainnolateness_orig_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:text="5844"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_trainnumber_orig_textview"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:includeFontPadding="false"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="24sp"/>

            <TextView
                android:text="On time"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_lateness_orig_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_gravity="top|center_horizontal"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nexttoarrive_nexttoarrivetrains_startendtime_orig_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/nexttoarrive_nexttoarrivetrains_trainnolateness_orig_view"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:text="4:55pm"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_starttime_orig_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="4:55pm"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_endtime_orig_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:text="Lansdale/Doylestown"
            android:id="@+id/nexttoarrive_nexttoarrivetrains_routename_orig_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/nexttoarrive_nexttoarrivetrains_startendtime_orig_view"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/ic_connection">
        </ImageView>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:text="Connect at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/nexttoarrive_nexttoarrivetrains_connectiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/nexttoarrive_nexttoarrivetrains_trainnolateness_term_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:text="5844"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_trainnumber_term_textview"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:includeFontPadding="false"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="24sp"/>

            <TextView
                android:text="On time"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_lateness_term_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_gravity="top|center_horizontal"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nexttoarrive_nexttoarrivetrains_startendtime_term_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/nexttoarrive_nexttoarrivetrains_trainnolateness_term_view"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:text="4:55pm"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_starttime_term_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="4:55pm"
                android:id="@+id/nexttoarrive_nexttoarrivetrains_endtime_term_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:text="Lansdale/Doylestown"
            android:id="@+id/nexttoarrive_nexttoarrivetrains_routename_term_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/nexttoarrive_nexttoarrivetrains_startendtime_term_view"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="center_vertical"/>
    </LinearLayout>


</LinearLayout>