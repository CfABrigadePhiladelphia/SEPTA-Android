<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/radiuserdit_dialog_layout"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
    android:background="#00FFFFFF">
    <TextView
        android:id="@+id/radiusedit_dialog_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance from your current location to search:"
        android:gravity="left"
        android:textSize="12dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/radiusedit_textview_ones"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#646566"
            android:textSize="32dp"
            android:textStyle="bold"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:nextFocusForward="@+id/radiusedit_textview_tenths"
            android:textColor="#FFFFFFFF"/>
        <TextView
            android:id="@+id/radiusedit_textview_decimal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#646566"
            android:textSize="32dp"
            android:textStyle="bold"
            android:editable="false"
            android:textColor="#FFFFFFFF"
            android:text="."/>

        <EditText
            android:id="@id/radiusedit_textview_tenths"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#646566"
            android:textSize="32dp"
            android:textStyle="bold"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:nextFocusForward="@+id/radiusedit_textview_hundredths"
            android:textColor="#FFFFFFFF"/>
        <EditText
            android:id="@id/radiusedit_textview_hundredths"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#646566"
            android:textSize="32dp"
            android:textStyle="bold"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:nextFocusForward="@+id/radiusedit_textview_thounsandths"
            android:textColor="#FFFFFFFF"/>
        <EditText
            android:id="@id/radiusedit_textview_thounsandths"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#646566"
            android:textSize="32dp"
            android:textStyle="bold"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:nextFocusForward="@+id/radiusedit_textview_ones"
            android:textColor="#FFFFFFFF"/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:text="miles"
        android:textSize="14sp"
        android:textColor="#FFFFFFFF"/>

</LinearLayout>